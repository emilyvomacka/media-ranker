<h2>User Summary: <%= link_to @user.username, user_path(@user) %></h2>

<p>Joined site <%= readable_date(@user.created_at) %> </p>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
    <% @user.votes.each do |vote| %>
      <% work = Work.find(vote.work_id) %>
      <tr>
        <td> <%= link_to work.title, work_path(work) %> 
        </td>
        <td><%= work.creator  %></td>
        <td><%= work.publication_year %> </td>
        <td><%= work.category %></td>
        <td><%= readable_date(vote.created_at) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<%= link_to "See all Users", users_path, class: "btn btn-secondary" %>
<%= link_to "Back to Media List", works_path, class: "btn btn-primary" %>
